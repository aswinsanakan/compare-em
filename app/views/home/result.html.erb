<%= render 'search_bar' %>

<div class="container">
 <div class="col s9 m7">
    <h5 class="header center"><%= @amazon_title %></h5>
    <div class="card horizontal">
      <div class="card-image">
        <%= image_tag @amazon_image %>
      </div>
      <div class="card-stacked">
        <div class="card-content">

			      <a href=<%= @snapdeal_link %>><p>Snapdeal</p></a>
          	<h5><%= @snapdeal_price %></h5>
          	<a href= <%= @amazon_link %>><p>Amazon</p></a>
          	<h5>Rs <%= @amazon_price || "Couldn't fetch" %></h5>
            <a href= <%= @flipkart_link %>><p>Flipkart</p></a>
          	<h5>Rs <%= @flipkart_price %></h5>
        </div>
      </div>
    </div>
  </div>
</div>
